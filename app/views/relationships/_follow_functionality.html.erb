<% if current_user != user && current_user.following.exists?(user.id) %>
  <% relationship = current_user.active_relationships.find_by(followed_id: user.id) %>
  <%= button_to "Unfollow", user_relationship_path(current_user, relationship), method: :delete, class: "btn btn-primary" %>
<%elsif current_user != user && !current_user.following.exists?(user.id) %>
  <%= button_to "Follow", user_relationships_path(user), class: "btn btn-primary"  %>
<%end%>