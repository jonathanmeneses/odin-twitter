<div class="d-flex flex-start mt-4">
  <%# Placeholder images %>
  <%= link_to user_path(comment.user), class: "me-3" do %>
    <% if comment.user.avatar.attached? %>
      <%= image_tag comment.user.avatar, class:"rounded-circle shadow-1-strong avatar-dims" %>
    <%else%>
      <%= image_tag 'deer.png', class:"rounded-circle shadow-1-strong avatar-dims"%>
    <% end %>
  <% end %>
  <div class="flex-grow-1 flex-shrink-1">
    <div>
      <div class="d-flex justify-content-between align-items-center">
        <p class="mb-1">
          <%=comment.user.username%> <span class="small">- <%= comment.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%y at %I:%M %p") %></span>
        </p>
      </div>
      <p class="small mb-0">
        <%= comment.content%>
      </p>
    </div>
  </div>
</div>