<div class="d-flex flex-start mt-4">
  <%# Placeholder images %>
  <%= link_to user_path(comment.user), class: "me-3" do %>
    <img class="rounded-circle shadow-1-strong"
                          src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(11).webp" alt="avatar"
                          width="65" height="65" />
  <% end %>
  <div class="flex-grow-1 flex-shrink-1">
    <div>
      <div class="d-flex justify-content-between align-items-center">
        <p class="mb-1">
          <%=comment.user.username%> <span class="small">- <%= comment.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%y at %I:%M %p") %></span>
        </p>
      </div>
      <p class="small mb-0">
        <%= comment.content%>
      </p>
    </div>
  </div>
</div>